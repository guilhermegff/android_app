<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tela1"
    tools:context="com.example.guilherme.avaliacaoalimentar.Tela3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/tela3text1_telaSugText1"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/tela3text2_telaSugText2"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoResp5"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resp5"
        android:layout_marginTop="130dp"
        android:onClick="pegaResp"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoResp6"
        android:layout_below="@id/botaoResp5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resp6"
        android:onClick="pegaResp"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoResp7"
        android:layout_below="@id/botaoResp6"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resp7"
        android:onClick="pegaResp"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoResp8"
        android:layout_below="@id/botaoResp7"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resp8"
        android:onClick="pegaResp"

        />
</RelativeLayout>
